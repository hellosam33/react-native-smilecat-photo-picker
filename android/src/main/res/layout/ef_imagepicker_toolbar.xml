<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="@drawable/toolbar_border"
    android:elevation="0dp"
    app:titleTextColor="@color/ef_colorSmilecatRed"
    app:titleTextAppearance="@style/ef_CustomToolbarTheme"
    app:contentInsetStart="0dp"
    tools:ignore="UnusedAttribute">

    <TextView
        android:id="@+id/toolbar_select_album"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/folder_selector_name"
        android:drawableEnd="@drawable/dropdown_down"
        android:layout_gravity="center"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:textColor="@color/ef_colorPrimaryDark"
        />

    <TextView
        android:id="@+id/toolbar_photo_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ef_colorSmilecatRed"
        android:layout_gravity="end" />

</androidx.appcompat.widget.Toolbar>
